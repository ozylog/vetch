{
  "name": "vetch",
  "version": "2.1.2",
  "description": "Simple fetch-wrapper",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=8.9.0 <11.0",
    "yarn": ">=1.3.2"
  },
  "repository": "git@github.com:ozylog/vetch.git",
  "keywords": [
    "fetch",
    "fetch-wrapper",
    "typescript"
  ],
  "contributors": [
    "Cahya Pribadi <ozylog@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/ozylog/vetch/issues"
  },
  "homepage": "https://github.com/ozylog/vetch.git#readme",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepublish": "yarn build",
    "test": "eslint ./src/* --fix && jest --coverage",
    "coverage": "cat ./coverage/lcov.info | yarn coveralls"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^24.0.18",
    "@types/nock": "^10.0.3",
    "@types/node-fetch": "^2.3.7",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.3.0",
    "jest": "^24.9.0",
    "nock": "^10.0.6",
    "node-fetch": "^2.6.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-console": 1,
      "no-useless-escape": 0,
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/ban-ts-ignore": 0,
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "none"
        }
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
